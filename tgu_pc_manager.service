[Unit]
Description=Gunicorn instance to serve Flask App (local only)
After=network.target

[Service]
User=root
WorkingDirectory=/opt/tgu_pc_manager
ExecStart=/usr/local/bin/gunicorn -w 4 -b 127.0.0.1:3040 app:app

Restart=always
RestartSec=5
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=flask_app

[Install]
WantedBy=multi-user.target